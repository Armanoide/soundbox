<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:background="#1abc9c"
                android:textColor="#FFFFFF"
                android:text="pausé au parc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Posezauparcduluxembourg"
                android:layout_weight="1"
                android:textSize="10sp" />

            <Button
                android:text="Yugiho"
                android:background="#2ecc71"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Yugiho"
                android:layout_weight="1"
                android:textSize="12sp" />

            <Button
                android:background="#3498db"
                android:textColor="#FFFFFF"
                android:id="@+id/Yeay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:text="Yeay"
                android:layout_weight="1"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:background="#9b59b6"
                android:textColor="#FFFFFF"
                android:text="GG"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/GG"
                android:layout_weight="1"
                android:textSize="12sp" />

            <Button
                android:background="#34495e"
                android:textColor="#FFFFFF"
                android:text="J'en ai marre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Jenaimarre"
                android:layout_weight="1"
                android:textSize="12sp" />

            <Button
                android:background="#16a085"
                android:textColor="#FFFFFF"
                android:text="Hein"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Hein"
                android:layout_weight="1"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <Button
                android:background="#2980b9"
                android:textColor="#FFFFFF"
                android:text="Boit du sprite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Boitdusprite"
                android:layout_weight="1"
                android:textSize="12sp" />

            <Button
                android:background="#f1c40f"
                android:textColor="#FFFFFF"
                android:text="Tequila heineken"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Tequilaheineken"
                android:layout_weight="1"
                android:textSize="12sp" />

            <Button
                android:background="#e67e22"
                android:textColor="#FFFFFF"
                android:text="Ta gueule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Tagueule"
                android:layout_weight="1"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:background="#ecf0f1"
                android:textColor="#000000"
                android:text="Je vais y aller"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:soundEffectsEnabled="true"
                android:id="@+id/Jevaisyaller"
                android:textSize="12sp"
                android:layout_weight="1" />

            <Button
                android:text="Keskiya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Keskiya"
                android:layout_weight="1"
                android:textSize="12sp" />

            <Button
                android:background="#d35400"
                android:textColor="#FFF"
                android:text="j'ai un plan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Unplan"
                android:layout_weight="1"
                android:textSize="12sp" />

        </TableRow>

        <TableRow>

            <Button
                android:background="#95a5a6"
                android:textColor="#000"
                android:text="moundir svp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Moundirsvp"
                android:textSize="12sp"
                android:layout_weight="1" />

            <Button
                android:background="#c0392b"
                android:textColor="#FFF"
                android:text="tu te coupes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Situtecoupes"
                android:textSize="12sp"
                android:layout_weight="1" />

            <Button
                android:background="#2ecc71"
                android:textColor="#FFF"
                android:text="steven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Steven"
                android:layout_weight="1"
                android:textSize="12sp" />

        </TableRow>

        <TableRow>


            <Button
                android:background="#9b59b6"
                android:textColor="#FFF"
                android:text="Fermela"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Fermela"
                android:layout_weight="1"
                android:textSize="12sp" />

            <Button
                android:background="#2c3e50"
                android:textColor="#FFF"
                android:text="Vent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/Vent"
                android:layout_weight="1"
                android:textSize="12sp" />

            <Button
                android:background="#e74c3c"
                android:textColor="#FFF"
                android:text="Waka"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:id="@+id/lou"
                android:layout_weight="1"
                android:textSize="12sp" />
        </TableRow>
        <TableRow>
            <AutoCompleteTextView
                android:id="@+id/textview_tel"
                android:hint="Numéro à de tel à envoyer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:text="Envoyer"
                android:textColor="#FFFFFF"
                android:id="@+id/sendSms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
    </TableLayout>


</RelativeLayout>